---
import { Image } from "astro:assets";
export interface Props {
  src: string;
  alt: string;
  href: string;
}

const { src, alt, href } = Astro.props;
---

<a href={href} target="_blank" rel="noreferrer">
  <Image
    src={src}
    alt={alt}
    width={36}
    format="avif"
    quality={60}
    width={36}
    height={36}
    loading="eager"
  />
</a>

<style>
  a {
    display: inline-block;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    box-sizing: content-box;
    border: 1px solid #888;
    transition: box-shadow 0.1s ease-in-out;
  }
  a:hover,
  a:focus {
    border-color: #fff;
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.125);
  }
  img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
  }
</style>
