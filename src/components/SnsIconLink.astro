---
import { Image } from "astro:assets";
export interface Props {
  src: string;
  alt: string;
  href: string;
}

const { src, alt, href } = Astro.props;
---

<a href={href} target="_blank" rel="noreferrer">
  <Image
    src={src}
    alt={alt}
    width={36}
    format="avif"
    quality={60}
    width={72}
    height={72}
    fit="contain"
    loading="eager"
  />
</a>

<style>
  a {
    display: inline-block;
    width: 36px;
    height: 36px;
    border-radius: 50%;
  }
  a:hover {
    opacity: 0.6;
  }
  img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
  }
</style>
