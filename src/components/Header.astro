---
import Socials from "./Socials.astro";
import { Image } from "astro:assets";
---

<header>
  <Image
    class="icon"
    src="/images/me.jpg"
    alt="すずきゆーだいのプロフィール画像"
    width={320}
    height={320}
    loading="eager"
    format="avif"
    quality={60}
  />
  <h1 class="name">すずきゆーだい</h1>
  <p class="description">
    秋になると柿を200個食べるエンジニア
    <br />
    株式会社ゆめみ
  </p>
  <Socials />
</header>

<style>
  header {
    text-align: center;
    line-height: 1.6;
  }
  .name {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 12px;
  }
  .icon {
    display: inline-block;
    width: 180px;
    height: 180px;
    border-radius: 50%;
    margin-bottom: 16px;
  }
</style>
